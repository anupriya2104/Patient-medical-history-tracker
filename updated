    });

    // Previous service panel functionality remains the same
    const serviceDetails = {
      checkup: {
        title: "Medical Checkup",
        description: "Our comprehensive medical checkup service includes:",
        features: [
          "Complete physical examination",
          "Blood work and laboratory tests",
          "Cardiac assessment",
